# Redis Wellness Environment Configuration
# Copy this file to .env and update values as needed

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# FastAPI Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development

# Ollama Configuration (Local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Frontend Configuration
FRONTEND_PORT=3000

# Session & Security
SECRET_KEY=your-secret-key-here
SESSION_TIMEOUT=3600

# Health Data Settings
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=xml,json

# User Health Context (Personal Medical History)
# This context is included in the LLM system prompt to provide personalized coaching.
# Add your medical history, injuries, goals, or any relevant health context here.
# This file is gitignored - your personal health information stays private.
USER_HEALTH_CONTEXT="Add your personal health context here. Example: I had shoulder surgey in April 2025. My fitness goals are endurance, stength and consistency."

# User Timezone (for display times like sleep bedtime/wake time)
# All internal storage remains UTC, but display times convert to this timezone
# Format: IANA timezone database name (e.g., America/Los_Angeles, America/New_York, Europe/London)
USER_TIMEZONE="America/Los_Angeles"

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Optional: External Services (if needed)
# API_KEY=your-api-key-here
# WEBHOOK_URL=https://your-webhook-url.com
